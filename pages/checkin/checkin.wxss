/* checkin.wxss */
.topic-title-buy
{
    font-size:110%;
    height:40rpx;
    line-height: 1.4;
    box-sizing: border-box;
    padding-top: 10rpx;
    overflow:hidden;
}

#search_input{padding: 0 0 20rpx 20rpx;background-color: #0E7EE6;overflow: hidden;height: 60rpx;flex:0 0 60rpx;color: #fff}
#search_input .form{display: flex;}
.form_input{flex: 1;position: relative;color: #fff;height: 60rpx;overflow: hidden}
.form_input view{position: absolute;top: 0;z-index: 10;left: 0;padding:12rpx 15rpx  }
.form_input .sf_clear{right: 0;left: auto}
#search_input input{border:none;color: #515151;background-color: white;
border-radius:4rpx;font-size: 28rpx;padding: 0 60rpx;box-sizing: border-box;height: 60rpx;line-height:60rpx;display: block;}

.button button{padding: 0 20rpx;height:60rpx;border: none;line-height: 60rpx;display:block;text-align: right;font-size: 30rpx;color: #fff}
#search_header{position: fixed;top:0;left: 0;width: 100%;z-index: 10;}

.icon-wrapper{
  height:40rpx;
  width:40rpx;
  display:flex;
  justify-content: center;
  align-items: center;
}