page{
  height: 100%;
  width: 100%;
}

.account-card-wrapper{
  width: 100%;
  height: 170px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
}

.account-card{
  width: 90%;
  height: 120px;
  background: linear-gradient(to right,#0E7EE6,#65B1F5) ;
  border-radius: 20px;
  box-shadow: 0px 5px 5px #BBB;
  display: flex;
  align-items: center;
}

.account-card image{
  width: 80px;
  height: 80px;
  border-radius: 40px;
  margin-left: 20px;
}

.account-detail{
  margin-left: 20px;
}
.account-name{
  color: white;
  font-size: 20px;
}

.account-location{
  color:aliceblue;
  font-size: 13px;
}

.account-item-wrapper{
  width: 100%;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.account-item{
  height:80px;
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item-helper{
  width: 10%;
  height: 50px;
}

#second-helper{
  border-left:1px solid #BBB;
}

.item-main{
  font-size: 23px;
  font-weight: bold;
  color: #0E7EE6;
}

#gender{
  font-size: 21px;
}

.item-sub{
  font-size: 13px;
  color: #BBB;
  font-weight: lighter;
}

@import "/pages/tabbar/tabbar.wxss"